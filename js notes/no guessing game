let real_no = Math.floor((Math.random()*10)+1);
let running = true;
let guess
while(running)
{
    guess = window.prompt("enter your no between 1-10");
    guess=Number(guess);
    if(real_no>guess)
    {
        window.alert("no is too low");
    }
    else if(real_no<guess)
    {
        window.alert("no is too high");
    }
    else if(real_no==guess)
    {
        window.alert("you got the right answer");
        running = false;
    }

}